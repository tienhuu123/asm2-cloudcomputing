<style>
    .body {
        width: 100%;
        height: auto;
        position: relative;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
    }
    h4{
        margin-bottom: 20px;
    }
</style>

<div class="body">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id order</th>
                <th scope="col">Date to order</th>
                <th scope="col">type product</th>
                <th scope="col">quantity</th>
                <th scope="col">total price</th>
                <th scope="col">print bill</th>


            </tr>
        </thead>
        <tbody>
            {{#if bill}}
            {{#each bill}}
            <tr>
                <th scope="row">{{this._id.id}}</th>
                <td>{{this._id.date}}</td>
                <td>{{this.type_pr}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.total}}$</td>
                <td><a  href="/printBill/{{this._id.id}}">Print bill</a></td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>