<style>
    .body {
        width: 100%;
        height: auto;
        position: relative;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        margin-top: 30px;
    }
    h4{
        margin-bottom: 20px;
    }
</style>

<div class="body">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id category</th>
                <th scope="col">Category name</th>
            </tr>
        </thead>
        <tbody>
            {{#if ct}}
            {{#each ct}}
            <tr>
                <th scope="row">{{this.categoryid}}</th>
                <td>{{this.categoryname}}</td>
            </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>